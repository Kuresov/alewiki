%h1 New Wiki

.col-md-8
  = form_for @wiki do |f|
    .form-group
      = f.label :title
      = f.text_field :title, class:'form-control', autofocus: true, placeholder: 'title'

    .form-group
      = f.label :body
      = f.text_area :body, class:'form-control', size: '60x12'

    - if current_user.role == 'admin' || current_user.role == 'premium'
      .form-group
        = f.label :private
        = f.check_box :private

    .actions
      = f.submit "Submit"

.col-md-4
