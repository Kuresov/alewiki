%h1= "#{@wiki.title}"

.col-md-8
  %p
    = markdown_to_html @wiki.body

.col-md-4
  - if policy(@wiki).edit?
    %p= link_to "Edit Wiki", edit_wiki_path
  - if policy(@wiki).leave_collaboration?
    %p= link_to "Leave Wiki", leave_collaboration_wiki_path, method: :delete
  = render 'wikis/wiki_sidebar'
